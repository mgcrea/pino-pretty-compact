{
  "name": "@mgcrea/pino-pretty-compact",
  "version": "0.6.0",
  "description": "Compact request logger plugin for fastify written in TypeScript",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/pino-pretty-compact",
  "license": "MIT",
  "access": "public",
  "scripts": {
    "start": "npm run spec -- --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "typecheck": "tsc --noEmit",
    "spec": "DEBUG=fastify-session*,prisma-query jest --runInBand",
    "test": "npm run lint && npm run prettycheck && npm run typecheck && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pino",
    "pretty",
    "compact",
    "fastify",
    "logger"
  ],
  "devDependencies": {
    "@mgcrea/fastify-request-logger": "^0.6.1",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@tsconfig/node14": "^1.0.3",
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/pino-pretty": "^4.7.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "fastify": "^4.11.0",
    "http-errors": "^2.0.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2"
  },
  "dependencies": {
    "chalk": "^4",
    "pino-pretty": "^9.1.1"
  }
}
